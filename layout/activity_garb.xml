<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/scen"
    tools:context=".GarbActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check the percentage of Garbage in the given below areas."
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type the exact name from the given list"/>

    <Button
        android:id="@+id/query_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5F95BF"
        android:text="Check"
        android:textColor="#0D27BC" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="100px" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of areas:"
        android:textSize="80px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vidyaranyapuram"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ashokapuram"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kuvempunagar"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mall of Mysore"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siddartha Layout"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busstand"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Railwaystation"
        android:textSize="50px"
        android:layout_marginLeft="300px"/>
</LinearLayout>